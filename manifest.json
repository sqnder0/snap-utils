{
  "manifest_version": 3,
  "name": "Snapchat Utils",
  "version": "1.0.0",
  "description": "A Chrome extension for Snapchat utilities",

  "permissions": ["activeTab", "storage"],

  "host_permissions": ["https://*.snapchat.com/*"],

  "content_scripts": [
    {
      "matches": ["https://*.snapchat.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],

  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  }
}
